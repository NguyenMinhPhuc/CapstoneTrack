rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * @description Restricts access to user account information to the owning user and admins.
     * @path /users/{userId}
     * @allow (get, create, update, delete) if the user is the owner or an admin.
     * @deny (get, create, update, delete) if the user is not the owner or an admin.
     * @principle Enforces user-level data isolation and admin override.
     */
    match /users/{userId} {
      function isOwner(userId) {
        return request.auth.uid == userId;
      }

      function isAdmin() {
        return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
      }

      function isSignedIn() {
        return request.auth != null;
      }

      allow get: if isSignedIn() && (isOwner(userId) || isAdmin());
      allow list: if false;
      allow create: if isSignedIn() && isOwner(userId);
      allow update: if isSignedIn() && (isOwner(userId) || isAdmin());
      allow delete: if isSignedIn() && (isOwner(userId) || isAdmin());
    }

    /**
     * @description Allows public read access to student profiles, but restricts writes to the owner.
     * @path /students/{studentId}
     * @allow (get, list) everyone.
     * @allow (create, update, delete) if the user is the owner.
     * @deny (create, update, delete) if the user is not the owner.
     * @principle Public read access with owner-only writes.
     */
    match /students/{studentId} {
      function isOwner(studentId) {
        return request.auth.uid == resource.data.ownerId;
      }

      function isSignedIn() {
        return request.auth != null;
      }

      allow get, list: if true;
      allow create: if isSignedIn() && request.resource.data.ownerId == request.auth.uid;
      allow update: if isSignedIn() && request.auth.uid == resource.data.ownerId;
      allow delete: if isSignedIn() && request.auth.uid == resource.data.ownerId;
    }

    /**
     * @description Allows public read access to supervisor profiles, but restricts writes to the owner.
     * @path /supervisors/{supervisorId}
     * @allow (get, list) everyone.
     * @allow (create, update, delete) if the user is the owner.
     * @deny (create, update, delete) if the user is not the owner.
     * @principle Public read access with owner-only writes.
     */
    match /supervisors/{supervisorId} {
      function isOwner(supervisorId) {
        return request.auth.uid == resource.data.ownerId;
      }

      function isSignedIn() {
        return request.auth != null;
      }

      allow get, list: if true;
      allow create: if isSignedIn() && request.resource.data.ownerId == request.auth.uid;
      allow update: if isSignedIn() && request.auth.uid == resource.data.ownerId;
      allow delete: if isSignedIn() && request.auth.uid == resource.data.ownerId;
    }

    /**
     * @description Allows public read access to graduation defense session information, but restricts writes to the owner.
     * @path /graduationDefenseSessions/{sessionId}
     * @allow (get, list) everyone.
     * @allow (create, update, delete) if the user is the owner.
     * @deny (create, update, delete) if the user is not the owner.
     * @principle Public read access with owner-only writes.
     */
    match /graduationDefenseSessions/{sessionId} {
      function isOwner(sessionId) {
        return request.auth.uid == resource.data.ownerId;
      }

      function isSignedIn() {
        return request.auth != null;
      }

      allow get, list: if true;
      allow create: if isSignedIn() && request.resource.data.ownerId == request.auth.uid;
      allow update: if isSignedIn() && request.auth.uid == resource.data.ownerId;
      allow delete: if isSignedIn() && request.auth.uid == resource.data.ownerId;
    }

    /**
     * @description Allows public read access to defense registration information, but restricts writes to the owner.
     * @path /graduationDefenseSessions/{sessionId}/registrations/{registrationId}
     * @allow (get, list) everyone.
     * @allow (create, update, delete) if the user is the owner.
     * @deny (create, update, delete) if the user is not the owner.
     * @principle Public read access with owner-only writes.
     */
    match /graduationDefenseSessions/{sessionId}/registrations/{registrationId} {
      function isOwner(registrationId) {
        return request.auth.uid == resource.data.ownerId;
      }

      function isSignedIn() {
        return request.auth != null;
      }

      allow get, list: if true;
      allow create: if isSignedIn() && request.resource.data.ownerId == request.auth.uid;
      allow update: if isSignedIn() && request.auth.uid == resource.data.ownerId;
      allow delete: if isSignedIn() && request.auth.uid == resource.data.ownerId;
    }
  }
}