rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * @description Checks if the user is signed in.
     * @returns {boolean} True if the user is signed in, false otherwise.
     */
    function isSignedIn() {
      return request.auth != null;
    }

    /**
     * @description Checks if the user is the owner of the document.
     * @param {string} userId - The user ID to compare against the request's auth UID.
     * @returns {boolean} True if the user is the owner, false otherwise.
     */
    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    /**
     * @description Checks if the user is an existing owner of the document.
     * @param {string} userId - The user ID to compare against the request's auth UID.
     * @param {string} resourceData - The resource.data to check against.
     * @returns {boolean} True if the user is the owner and the resource exists, false otherwise.
     */
    function isExistingOwner(userId) {
        return isOwner(userId) && exists(resource);
    }

    /**
     * @description Checks if the user has the admin role.
     * @returns {boolean} True if the user has the admin role, false otherwise.
     */
    function isAdmin() {
      return isSignedIn() && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    /**
     * @description Checks if the user has the supervisor role.
     * @returns {boolean} True if the user has the supervisor role, false otherwise.
     */
    function isSupervisor() {
        return isSignedIn() && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'supervisor';
    }

    /**
     * @description Checks if the user has the student role.
     * @returns {boolean} True if the user has the student role, false otherwise.
     */
    function isStudent() {
        return isSignedIn() && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'student';
    }

    /**
     * @description Rules for user accounts.
     * @path /users/{userId}
     * @allow (create) User with ID 'user123' can create their own account.
     * @allow (get) Admin can get any user account.
     * @deny (create) User with ID 'user123' cannot create an account with ID 'user456'.
     * @deny (update) Non-owner cannot update user account.
     * @principle Enforces document ownership for writes, admin access for reads.
     */
    match /users/{userId} {
      allow get: if isOwner(userId) || isAdmin();
      allow list: if false;
      allow create: if isSignedIn() && request.auth.uid == userId;
      allow update: if isExistingOwner(userId);
      allow delete: if isExistingOwner(userId);
    }

    /**
     * @description Rules for students.
     * @path /students/{studentId}
     * @allow (create) Admin can create a student.
     * @allow (get) Admin can get any student.
     * @deny (create) Non-admin cannot create a student.
     * @deny (update) Non-admin cannot update a student.
     * @principle Restricts access to student data based on ownership and admin role.
     */
    match /students/{studentId} {
      allow get: if isAdmin();
      allow list: if false;
      allow create: if isAdmin();
      allow update: if isAdmin();
      allow delete: if isAdmin();
    }

    /**
     * @description Rules for supervisors.
     * @path /supervisors/{supervisorId}
     * @allow (create) Admin can create a supervisor.
     * @allow (get) Admin can get any supervisor.
     * @deny (create) Non-admin cannot create a supervisor.
     * @deny (update) Non-admin cannot update a supervisor.
     * @principle Restricts access to supervisor data based on ownership and admin role.
     */
    match /supervisors/{supervisorId} {
      allow get: if isAdmin();
      allow list: if false;
      allow create: if isAdmin();
      allow update: if isAdmin();
      allow delete: if isAdmin();
    }

    /**
     * @description Rules for graduation defense sessions.
     * @path /graduationDefenseSessions/{sessionId}
     * @allow (get) Any authenticated user can read session information.
     * @allow (create) Admin can create a session.
     * @deny (create) Non-admin cannot create a session.
     * @deny (update) Non-admin cannot update a session.
     * @principle Allows public read access but restricts write access to admins.
     */
    match /graduationDefenseSessions/{sessionId} {
      allow get: if isSignedIn();
      allow list: if false;
      allow create: if isAdmin();
      allow update: if isAdmin();
      allow delete: if isAdmin();
    }

    /**
     * @description Rules for defense registrations within a session.
     * @path /graduationDefenseSessions/{sessionId}/registrations/{registrationId}
     * @allow (create) Student can create a registration.
     * @allow (get) Any authenticated user can read registration information.
     * @deny (create) Non-student cannot create a registration.
     * @deny (update) Non-admin cannot update a registration.
     * @principle Restricts registration creation to students, allows public read access, and restricts modification to admins.
     */
    match /graduationDefenseSessions/{sessionId}/registrations/{registrationId} {
      allow get: if isSignedIn();
      allow list: if false;
      allow create: if isStudent();
      allow update: if isAdmin();
      allow delete: if isAdmin();
    }
  }
}