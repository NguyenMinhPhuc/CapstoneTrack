/**
 * @file Firestore Security Rules
 * @description This ruleset enforces role-based access control for the CapstoneTrack system.
 *
 * Data Structure:
 * - /users/{userId}: Stores user account information, accessible only to the user themselves and admins.
 * - /students/{studentId}: Stores student details, accessible only to admins.
 * - /supervisors/{supervisorId}: Stores supervisor details, accessible only to admins.
 *
 * Key Security Decisions:
 * - Admins have full read and write access to all collections.
 * - Users (students and supervisors) can only read and write their own user account data.
 * - Listing of users, students, and supervisors is restricted to admins only.
 *
 * Role-Based Access:
 * The system implements Role-Based Access Control (RBAC) using the 'role' field in the /users/{userId} document.
 * Currently, the roles are 'admin', 'supervisor', and 'student'.
 *
 * Note: In a production environment, consider more granular role management and auditing.
 */
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * @description Controls access to user account information.
     * @path /users/{userId}
     * @allow (read, write) if the user is the owner of the account or an admin.
     * @deny (read, write) if the user is not the owner and not an admin.
     * @principle Enforces user ownership and admin override for user accounts.
     */
    match /users/{userId} {
      function isSignedIn() {
        return request.auth != null;
      }

      function isOwner(userId) {
        return request.auth.uid == userId;
      }

      function isAdmin() {
        return isSignedIn() && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
      }

      allow get: if isSignedIn() && (isOwner(userId) || isAdmin());
      allow list: if isAdmin();
      allow create: if isSignedIn() && isOwner(userId) && request.resource.data.id == userId;
      allow update: if isSignedIn() && (isOwner(userId) || isAdmin()) && resource.data.id == userId;
      allow delete: if isSignedIn() && (isOwner(userId) || isAdmin()) && resource.data.id == userId;
    }

    /**
     * @description Controls access to student information.
     * @path /students/{studentId}
     * @allow (read, write) if the user is an admin.
     * @deny (read, write) if the user is not an admin.
     * @principle Restricts access to student data to admins only.
     */
    match /students/{studentId} {
      function isSignedIn() {
        return request.auth != null;
      }

      function isAdmin() {
        return isSignedIn() && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
      }

      allow get: if isAdmin();
      allow list: if isAdmin();
      allow create: if isAdmin();
      allow update: if isAdmin();
      allow delete: if isAdmin();
    }

    /**
     * @description Controls access to supervisor information.
     * @path /supervisors/{supervisorId}
     * @allow (read, write) if the user is an admin.
     * @deny (read, write) if the user is not an admin.
     * @principle Restricts access to supervisor data to admins only.
     */
    match /supervisors/{supervisorId} {
      function isSignedIn() {
        return request.auth != null;
      }

      function isAdmin() {
        return isSignedIn() && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
      }

      allow get: if isAdmin();
      allow list: if isAdmin();
      allow create: if isAdmin();
      allow update: if isAdmin();
      allow delete: if isAdmin();
    }
  }
}