/**
 * @fileoverview Firestore Security Rules for CapstoneTrack System
 *
 * Core Philosophy:
 * This ruleset enforces a strict user-ownership model for user accounts, students, and supervisors.
 * All writes are restricted to authenticated users, and data access is primarily controlled by the user's ID.
 * Additionally, the admin role is supported for full read and write access.
 *
 * Data Structure:
 * - /users/{userId}: Stores user account information, including roles.
 * - /students/{studentId}: Stores student details.
 * - /supervisors/{supervisorId}: Stores supervisor details.
 *
 * Key Security Decisions:
 * - User listing is only allowed for admins.
 * - All write operations are restricted to authenticated users.
 * - The `id` field in each document must match the document ID to enforce ownership.
 * - Authorization Independence is achieved via path-based ownership
 * - Roles are checked against the user's 'role' field and/or authentication information, when applicable.
 */
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * @description Controls access to user account documents.
     * @path /users/{userId}
     * @allow (create) - Authenticated user creates their own account with matching userId and id.
     * @allow (get, list, update, delete) - Authenticated user with admin role can perform all operations.
     * @deny (create) - User attempts to create an account with a mismatched userId and id.
     * @principle Enforces document ownership and admin overrides.
     */
    match /users/{userId} {
      function isSignedIn() {
        return request.auth != null;
      }

      function isOwner(userId) {
        return request.auth.uid == userId;
      }

      function isAdmin() {
        return isSignedIn() && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
      }

      function isExistingOwner(userId) {
        return isOwner(userId) && resource != null;
      }

      allow get: if isAdmin();
      allow list: if isAdmin();
      allow create: if isSignedIn() && isOwner(userId) && request.resource.data.id == userId;
      allow update: if isSignedIn() && (isExistingOwner(userId) || isAdmin()) && request.resource.data.id == resource.data.id;
      allow delete: if isSignedIn() && (isExistingOwner(userId) || isAdmin());
    }

    /**
     * @description Controls access to student documents.
     * @path /students/{studentId}
     * @allow (create) - Authenticated user creates their own student record with matching studentId and id, or if user is admin
     * @allow (get, list, update, delete) - Authenticated user with admin role can perform all operations.
     * @deny (create) - User attempts to create a student record with a mismatched studentId and id.
     * @principle Enforces document ownership and admin overrides.
     */
    match /students/{studentId} {
      function isSignedIn() {
        return request.auth != null;
      }

      function isOwner(studentId) {
        return request.auth.uid == studentId;
      }

      function isAdmin() {
        return isSignedIn() && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
      }

      function isExistingOwner(studentId) {
        return isOwner(studentId) && resource != null;
      }

      allow get: if isAdmin();
      allow list: if isAdmin();
      allow create: if isSignedIn() && (isOwner(studentId) && request.resource.data.id == studentId || isAdmin());
      allow update: if isSignedIn() && (isExistingOwner(studentId) || isAdmin()) && request.resource.data.id == resource.data.id;
      allow delete: if isSignedIn() && (isExistingOwner(studentId) || isAdmin());
    }

     /**
      * @description Controls access to supervisor documents.
      * @path /supervisors/{supervisorId}
      * @allow (create) - Authenticated user creates their own supervisor record with matching supervisorId and id, or if user is admin
      * @allow (get, list, update, delete) - Authenticated user with admin role can perform all operations.
      * @deny (create) - User attempts to create a supervisor record with a mismatched supervisorId and id.
      * @principle Enforces document ownership and admin overrides.
      */
    match /supervisors/{supervisorId} {
      function isSignedIn() {
        return request.auth != null;
      }

      function isOwner(supervisorId) {
        return request.auth.uid == supervisorId;
      }

      function isAdmin() {
        return isSignedIn() && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
      }

      function isExistingOwner(supervisorId) {
        return isOwner(supervisorId) && resource != null;
      }

      allow get: if isAdmin();
      allow list: if isAdmin();
      allow create: if isSignedIn() && (isOwner(supervisorId) && request.resource.data.id == supervisorId || isAdmin());
      allow update: if isSignedIn() && (isExistingOwner(supervisorId) || isAdmin()) && request.resource.data.id == resource.data.id;
      allow delete: if isSignedIn() && (isExistingOwner(supervisorId) || isAdmin());
    }
  }
}