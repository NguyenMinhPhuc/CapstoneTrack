/**
 * @file Firestore Security Rules
 * @description This ruleset enforces a strict user-ownership model for user accounts and open reads for graduation defense sessions.
 *
 * Data Structure:
 * - /users/{userId}: Stores user account information. Accessible only to the user and admins.
 * - /students/{studentId}: Stores student information.
 * - /supervisors/{supervisorId}: Stores supervisor information.
 * - /graduationDefenseSessions/{sessionId}: Stores graduation defense session information. Publicly readable, writeable by admins only.
 *
 * Key Security Decisions:
 * - User accounts are strictly controlled; only the owning user or an admin can read or write them.
 * - Listing of users is disallowed to prevent enumeration.
 * - Graduation defense sessions are publicly readable to allow easy access to session information.
 *
 * Denormalization for Authorization:
 *   No denormalization is used in this ruleset.
 *
 * Structural Segregation:
 *   No structural segregation is used in this ruleset.
 */
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * @description Controls access to user account documents.
     * @path /users/{userId}
     * @allow (get, update, delete) if the user is the owner or an admin.
     * @allow (create) if the user's ID matches the requested ID.
     * @deny (list) to prevent user enumeration.
     * @deny (create, update, delete) if the user is not the owner or an admin.
     * @principle Enforces document ownership for writes and restricts access to a user's own data tree.
     */
    match /users/{userId} {
      function isSignedIn() {
        return request.auth != null;
      }

      function isOwner(userId) {
        return request.auth.uid == userId;
      }

      function isAdmin() {
        return isSignedIn() && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
      }

      allow get: if isOwner(userId) || isAdmin();
      allow list: if false;
      allow create: if isSignedIn() && isOwner(userId) && request.resource.data.id == userId;
      allow update: if isSignedIn() && (isOwner(userId) || isAdmin()) && resource.data.id == userId;
      allow delete: if isSignedIn() && (isOwner(userId) || isAdmin()) && resource.data.id == userId;
    }

    /**
     * @description Controls access to student documents.
     * @path /students/{studentId}
     * @allow (get) if true
     * @allow (create) if isAdmin()
     * @allow (update, delete) if isAdmin()
     * @deny (list) to prevent user enumeration.
     * @principle Enforces admin-only writes and open reads.
     */
    match /students/{studentId} {
      function isSignedIn() {
        return request.auth != null;
      }

      function isAdmin() {
        return isSignedIn() && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
      }
      allow get: if true;
      allow list: if false;
      allow create: if isSignedIn() && isAdmin();
      allow update: if isSignedIn() && isAdmin();
      allow delete: if isSignedIn() && isAdmin();
    }

    /**
     * @description Controls access to supervisor documents.
     * @path /supervisors/{supervisorId}
     * @allow (get) if true
     * @allow (create) if isAdmin()
     * @allow (update, delete) if isAdmin()
     * @deny (list) to prevent user enumeration.
     * @principle Enforces admin-only writes and open reads.
     */
    match /supervisors/{supervisorId} {
      function isSignedIn() {
        return request.auth != null;
      }

      function isAdmin() {
        return isSignedIn() && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
      }
      allow get: if true;
      allow list: if false;
      allow create: if isSignedIn() && isAdmin();
      allow update: if isSignedIn() && isAdmin();
      allow delete: if isSignedIn() && isAdmin();
    }

    /**
     * @description Controls access to graduation defense session documents.
     * @path /graduationDefenseSessions/{sessionId}
     * @allow (get, list) if true
     * @allow (create) if isAdmin()
     * @allow (update, delete) if isAdmin()
     * @principle Enforces admin-only writes and open reads.
     */
    match /graduationDefenseSessions/{sessionId} {
      function isSignedIn() {
        return request.auth != null;
      }

      function isAdmin() {
        return isSignedIn() && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
      }
      allow get: if true;
      allow list: if true;
      allow create: if isSignedIn() && isAdmin();
      allow update: if isSignedIn() && isAdmin();
      allow delete: if isSignedIn() && isAdmin();
    }
  }
}